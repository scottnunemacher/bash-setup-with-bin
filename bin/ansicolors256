#!/bin/bash
# Run this script to see the ANSI color chart in the terminal:
#  `. ansicolors256`
echo '   '
echo '   This script generates an 8 bit color chart (256 colors) for reference'
echo '   using the ANSI CSI+SGR \033[38;5;###m for text foreground color.'
echo '   See: https://en.wikipedia.org/wiki/ANSI_escape_code#Escape_sequences'
echo '   '
echo -e "   \033[38;5;57mThis text is using color 57 (row 52 + column 5 = 57) = '\\\033[38;5;57m'.\033[m"
echo -en "\n   +  "

for i in {0..35}; do
  printf "%2b " $i
done
  printf "\n\n %3b  " 0
for i in {0..15}; do
  echo -en "\033[48;5;${i}m  \033[m "
done

#for i in 16 52 88 124 160 196 232; do
for i in {0..6}; do
  let "i = i*36 +16"
  printf "\n\n %3b  " $i
  for j in {0..35}; do
  let "val = i+j"
  echo -en "\033[48;5;${val}m  \033[m "
  done
done
echo -e "\n"
