# .bash_fancyprompt
# see: https://en.wikipedia.org/wiki/ANSI_escape_code#Escape_sequences

RESET='\e[0m'                # color reset

# Original foreground color range: (8 colors)
BLACK="\e[30m"               # foreground black
RED="\e[31m"                 # foreground red
GREEN="\e[32m"               # foreground black
YELLOW="\e[33m"              # foreground black
BLUE="\e[34m"                # foreground black
MAGENTA="\e[35m"             # foreground black
CYAN="\e[36m"                # foreground black
WHITE="\e[37m"               # foreground black

# Expanded foreground color range (216 colors)
# only a few self-named colors are chosen and displayed here
DKBLUE="\e[38;5;21m"       # foreground dark blue
BLUE="\e[38;5;27m"         # foreground blue
LTBLUE="\e[38;5;33m"      # foreground light blue
DKPRUPLE="\e[38;5;93m"       # foreground dark pruple
PRUPLE="\e[38;5;99m"         # foreground pruple
LTPRUPLE="\e[38;5;105m"      # foreground light pruple
DKORANGE="\e[38;5;202m"      # foreground dark orange
ORANGE="\e[38;5;208m"        # foreground orange
LTORANGE="\e[38;5;214m"      # foreground light orange

# Check if root else reg user
if [[ ${EUID} == 0 ]] ; then
    FRAME="${RED}";
    COLORDATETIME="${DKPRUPLE}";
    COLORWHO="${DKPRUPLE}";
    COLORPWD="${GREEN}";
    PERMS="${RED} # ";
else
    FRAME="${YELLOW}";
    COLORDATETIME="${GREEN}";
    COLORWHO="${GREEN}";
    COLORPWD="${GREEN}";
    PERMS="${GREEN} $ ";
fi

PS1="\n$FRAME\342\224\214\342\224\200\$(if [[ \$? == 0 ]]; then echo \"âœ…\"; else echo \"ðŸ”¥\";fi)$FRAME\342\224\200[$COLORWHO\u@\H$FRAME]\342\224\200[$COLORDATETIME\d \t$FRAME]\n\342\224\234\342\224\200[$COLORPWD\w$FRAME]\n\342\224\224\342\224\200>$PERMS$RESET"

unset FRAME;
